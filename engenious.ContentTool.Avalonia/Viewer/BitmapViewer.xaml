<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
             x:Class="engenious.ContentTool.Avalonia.BitmapViewer"
             xmlns:ct="clr-namespace:engenious.ContentTool.Avalonia"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             xmlns:models="clr-namespace:engenious.Content.Models;assembly=engenious.ContentTool">
    <Design.DataContext>
        <ct:BitmapViewer />
    </Design.DataContext>
    <Image Source="{Binding Path=ImageSource}" Stretch="Uniform" MaxWidth="{Binding Path=MaxImageSize.Width}" MaxHeight="{Binding Path=MaxImageSize.Height}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Image>
</UserControl>